# 添加 events 块
events {
    # 可以留空，或者根据需要配置事件模型
}

http {
    # HTTP 服务器块，用于将 HTTP 请求重定向到 HTTPS
    server {
        listen 80;
        listen [::]:80 ipv6only=on;
        server_name www.yunjinqi.top;

        # 将所有 HTTP 请求重定向到 HTTPS
        rewrite ^(.*)$ https://$host$1 permanent;

        location / {
            index index.html index.htm;
        }
    }

    # HTTPS 服务器块
    server {
        listen 443 ssl;
        server_name www.yunjinqi.top;

        # 网站根目录
        root html;
        index index.html index.htm;

        # SSL 证书和密钥路径
        ssl_certificate /home/ubuntu/anaconda3/lib/python3.11/site-packages/woniunote/yunjinqi.top_bundle.pem;
        ssl_certificate_key /home/ubuntu/anaconda3/lib/python3.11/site-packages/woniunote/yunjinqi.top.key;

        # SSL 配置
        ssl_session_timeout 5m;
        ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4;
        ssl_protocols TLSv1.2 TLSv1.3;  # 推荐仅使用 TLSv1.2 和 TLSv1.3
        ssl_prefer_server_ciphers on;

        # 根路径的请求处理
        location / {
            # 将请求转发到本地服务器
            proxy_pass http://127.0.0.1:8888;
            proxy_redirect off;

            # 设置代理头
            proxy_set_header Host $http_host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
